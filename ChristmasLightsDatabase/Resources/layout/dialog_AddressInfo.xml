
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="400dp"
    android:minWidth = "300dp">
    <TextView
        android:text="Address Line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/addressLineHeader"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="16dp"
        android:textColor="#ff000000" />
    <TextView
        android:text="addressLineValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/addressLineValue"
        android:textSize="13dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/cityHeader"
        android:textSize="16dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="cityValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/cityValue"
        android:textSize="13dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="State"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/stateHeader"
        android:textSize="16dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="stateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/stateValue"
        android:textSize="13dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="ZipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/zipHeader"
        android:textSize="16dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="zipValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/zipValue"
        android:textSize="13dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/descHeader"
        android:textSize="16dp"
        android:textColor="#ff000000"/>
    <TextView
        android:text="descValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:id="@+id/descValue"
        android:textSize="13dp"
        android:textColor="#ff000000"/>
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />


</LinearLayout>